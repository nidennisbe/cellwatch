<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_add_new_tech"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/background_gradient"
        android:text="ADD NEW TECHNICIAN"
        android:textColor="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_user_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_search_layout"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_search"
            android:elevation="10dp"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Search for technician here"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"

            android:textColor="#999999"
            android:textSize="@dimen/medium_font" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_technician"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_weight="3">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>