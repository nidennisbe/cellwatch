<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.niden.cellwatchsharing.fragments.CreateTaskForTechnicianFragment">


    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_type"
                    android:textAlignment="textStart" />

                <Spinner
                    android:id="@+id/tech_frag_spinnerType"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/task_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editTextTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_search_layout"
                android:ems="10"
                android:hint="@string/enter_task_name"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_padding"
                android:singleLine="true"
                android:textColor="#383838"
                android:textSize="@dimen/fab_margin" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background_search_layout"
                android:ems="10"
                android:hint="@string/description"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_padding"
                android:singleLine="true"
                android:textColor="#383838"
                android:textSize="@dimen/fab_margin" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background_search_layout"
                android:ems="10"
                android:hint="@string/address"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_padding"
                android:singleLine="true"
                android:textColor="#383838"
                android:textSize="@dimen/fab_margin" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/suburb_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editTextSuburb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background_search_layout"
                android:ems="10"
                android:hint="@string/suburb"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_padding"
                android:singleLine="true"
                android:textColor="#383838"
                android:textSize="@dimen/fab_margin" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/class_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"

            app:hintEnabled="false">

            <EditText
                android:id="@+id/editTextClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/background_search_layout"
                android:ems="10"
                android:hint="@string/hint_class"
                android:inputType="textPersonName"
                android:padding="@dimen/standard_padding"
                android:singleLine="true"
                android:textColor="#383838"
                android:textSize="@dimen/fab_margin" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/style_button_border_only"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:text="@string/start_date"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/style_button_border_only"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:text="@string/end_date"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
